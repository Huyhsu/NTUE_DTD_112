<main class="min-hz-100vh">
  <body>
    <section class="pb-4">
      <div class="container pb-4">
        <div class="row pb-4">
          <div class="col-xl-8 pt-2">
            <div
              id="carouselExampleIndicators"
              class="carousel slide pointer-event"
              data-bs-ride="carousel"
            >
              <div class="carousel-indicators">
                <button
                  type="button"
                  data-bs-target="#carouselExampleIndicators"
                  data-bs-slide-to="0"
                  class="active"
                  aria-current="true"
                  aria-label="Slide 1"
                ></button>
                <button
                  type="button"
                  data-bs-target="#carouselExampleIndicators"
                  data-bs-slide-to="1"
                  aria-label="Slide 2"
                ></button>
                <button
                  type="button"
                  data-bs-target="#carouselExampleIndicators"
                  data-bs-slide-to="2"
                  aria-label="Slide 3"
                ></button>
              </div>
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img
                    class="d-block w-100 object-fit-contain res-md-hz-260 hz-500 bg-light"
                    src="/img/main/test_content.png"
                    alt="Slide 1"
                  />
                </div>
                <div class="carousel-item">
                  <img
                    class="d-block w-100 object-fit-contain res-md-hz-260 hz-500 bg-light"
                    src="/img/main/test_content.png"
                    alt="Slide 2"
                  />
                </div>
                <div class="carousel-item">
                  <img
                    class="d-block w-100 object-fit-contain res-md-hz-260 hz-500 bg-light"
                    src="/img/main/test_content.png"
                    alt="Slide 3"
                  />
                </div>
              </div>
            </div>
          </div>
          <div class="col-xl-4 pt-2 justify-content-between d-flex flex-column">
            <div class="d-block pb-4">
              <p class="fz-26 font-weight-bold pt-2"><%= project.name %></p>
              <p>
                作品簡介：<br />
                &emsp;&emsp;<%= project.introduction %>
              </p>
              <!-- <p class="fz-16"><%= project.introduction %></p> -->
            </div>
            <div class="d-block">
              <p>
                組員：<% for(var i=0; i< project.members.length; i++){%><%
                if(i==project.members.length-1) { %><%=project.members[i].name
                %><% } else { %><%=project.members[i].name %>, <%}%><%}%>
              </p>
              <p>指導老師：<%= project.instructor %></p>
            </div>
            <div class="d-block text-end pe-2">
              <a
                href="https://www.instagram.com/ntuedtd112/"
                target="_blank"
                rel="instagram"
                aria-label="Instagram"
              >
                <i class="fa-brands fa-instagram fz-26 text-body"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="pt-4">
      <div class="container py-4">
        <% for(var i=0; i< project.members.length; i++){ %>
        <div class="row py-4 mt-4">
          <div class="col-lg-3">
            <p class="d-block bg-light">
              <img
                class="d-block w-100 object-fit-contain hz-240"
                src="/img/main/test_person_2.png"
              />
            </p>
          </div>
          <div class="col-lg-9">
            <div class="d-block">
              <p class="fz-26"><%-project.members[i].name %></p>
              <hr class="hr" />
              <p class="fz-16">職位：?</p>
              <p class="fz-16">聯絡方式：?</p>
              <p class="fz-16">專長：?</p>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </section>

    <% layout("layout") %>
  </body>
</main>
