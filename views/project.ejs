<main class="min-hz-100vh">
  <body>
    <section class="portfolio-work pt-2 pb-4">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="d-block">
              <div class="row portfolio-menu mb-4">
                <div
                  class="btn-group justify-content-center"
                  role="group"
                  aria-label="Basic radio toggle button group"
                >
                  <div class="col-md-12 text-center">
                    <!-- All -->
                    <input
                      type="radio"
                      name="shuffle-filter"
                      id="all"
                      class="btn-check"
                      value="all"
                      checked
                    />
                    <label
                      class="btn btn-md btn-secondary fz-16 mb-2"
                      for="all"
                    >
                      <p class="fz-16 m-0">全部</p>
                    </label>
                    <!-- Game -->
                    <input
                      type="radio"
                      name="shuffle-filter"
                      id="game"
                      autocomplete="off"
                      class="btn-check"
                      value="game"
                    />
                    <label
                      class="btn btn-md btn-secondary fz-16 mb-2"
                      for="game"
                    >
                      <p class="fz-16 m-0">遊戲</p>
                    </label>
                    <!-- Animation -->
                    <input
                      type="radio"
                      name="shuffle-filter"
                      id="animation"
                      autocomplete="off"
                      class="btn-check"
                      value="animation"
                    />
                    <label
                      class="btn btn-md btn-secondary fz-16 mb-2"
                      for="animation"
                    >
                      <p class="fz-16 m-0">動畫</p>
                    </label>
                    <!-- Website -->
                    <input
                      type="radio"
                      name="shuffle-filter"
                      id="website"
                      autocomplete="off"
                      class="btn-check"
                      value="website"
                    />
                    <label
                      class="btn btn-md btn-secondary fz-16 mb-2"
                      for="website"
                    >
                      <p class="fz-16 m-0">網頁</p>
                    </label>
                    <!-- App -->
                    <input
                      type="radio"
                      name="shuffle-filter"
                      id="app"
                      autocomplete="off"
                      class="btn-check"
                      value="app"
                    />
                    <label
                      class="btn btn-md btn-secondary fz-16 mb-2"
                      for="app"
                    >
                      <p class="fz-16 m-0">行動程式</p>
                    </label>
                    <!-- Plan -->
                    <input
                      type="radio"
                      name="shuffle-filter"
                      id="plan"
                      autocomplete="off"
                      class="btn-check"
                      value="plan"
                    />
                    <label
                      class="btn btn-md btn-secondary fz-16 mb-2"
                      for="plan"
                    >
                      <p class="fz-16 m-0">互動式企劃</p>
                    </label>
                  </div>
                </div>
              </div>
              <!-- <hr class="hr mb-4" /> -->
              <div class="row shuffle-wrapper shuffle">
                <% for(var i=0; i< projects.length; i++){ %>
                <div
                  class="col-md-4 portfolio-item shuffle-item p-0 bg-light"
                  data-groups='["<%-projects[i].type %>"]'
                >
                  <div class="d-block hz-240 p-1">
                    <img
                      class="object-fit-contain w-100 h-100"
                      src="<%-projects[i].projectCover %>"
                      alt="<%-projects[i].projectName %>"
                    />
                    <div class="portfolio-hover w-100 h-100 text-center">
                      <div class="portfolio-content">
                        <a
                          class="fz-26 text-white d-block fw-bold"
                          href="/project/<%-projects[i].team %>"
                          ><%-projects[i].projectName %>
                          <p class="fz-16 text-white fw-light">
                            <%-projects[i].projectIntro %>
                          </p></a
                        >
                      </div>
                    </div>
                  </div>
                </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <% layout("layout") %>

    <!-- Jquery -->
    <script
      src="https://code.jquery.com/jquery-3.6.4.min.js"
      integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8="
      crossorigin="anonymous"
    ></script>
    <!-- Shuffle -->
    <script src="https://unpkg.com/shufflejs@6.1.0/dist/shuffle.js"></script>
    <!-- Project js -->
    <script src="/js/project.js"></script>
  </body>
</main>
